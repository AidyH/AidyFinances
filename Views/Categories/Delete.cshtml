@model AF.ViewModels.Categories.CategoryViewModel

<h1>Delete Category</h1>

<div class="ui segment">    
    <div class="ui form">
        <form asp-controller="Categories" asp-action="Delete" method="post" class="ui large form validate-me" role="form">
            <div class="field">
                <p>Are you sure you want to delete @Model.Name?
            </div>
            <div class="field">
                <input type="submit" value="Delete" class="red ui button" />
                <a asp-controller="Categories" asp-action="Index">Cancel</a>
                <input type="hidden" asp-for="CategoryId" />
            </div>
        </form>
    </div>
</div>